<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView_item_service_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="Starbucks Canada"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_service_statusCrowed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5.0"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_service_statusDoor"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:text="Closed"
            android:textAlignment="viewStart"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="30sp"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView_service_address"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:text="Location: IB Building, UTM"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_service_time"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:text="Last Update: 10 mins ago"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/button_service_submit_feedback"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_weight="0.06"
        android:background="#ffffff"
        android:text="Crowd Report"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_service_space"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:layout_weight="0.06" />
</LinearLayout>