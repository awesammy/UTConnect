<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="5dp"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView_item_service_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="Starbucks Canada"
        android:layout_gravity="left"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="28dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:weightSum="100"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView_service_statusCrowed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="33.3"
            android:text="5.0"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_service_statusDoor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="33.3"
            android:text="Closed"
            android:textSize="30sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView_service_campus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="33.3"
            android:layout_gravity="center"
            android:text="UTM"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_weight="0.06"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView_service_address"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:layout_marginTop="5sp"
            android:text="Location: IB Building, UTM"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_service_time"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:layout_marginTop="5sp"
            android:text="Last Update: 10 mins ago"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:id="@+id/button_service_submit_feedback"
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:layout_weight="50"
            android:background="@android:color/transparent"
            android:text="Crowd Report"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@color/purple"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_service_goto_location"
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:layout_weight="50"
            android:background="@android:color/transparent"
            android:text="Goto Location"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@color/purple"
            android:textSize="15sp" />



    </LinearLayout>


    <TextView
        android:id="@+id/textView_service_space"
        android:layout_width="match_parent"
        android:layout_height="25sp" />
</LinearLayout>